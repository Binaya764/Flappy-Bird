{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Flappy Bird",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "g++ *.cpp -g -o flappybird.exe -mconsole -std=c++17 -Wall -DSFML_STATIC -I\"E:/SFML/External library/SFML/SFML-2.6.2-windows-gcc-13.1.0-mingw-64-bit/SFML-2.6.2/include\" -L\"E:/SFML/External library/SFML/SFML-2.6.2-windows-gcc-13.1.0-mingw-64-bit/SFML-2.6.2/lib\" -lsfml-graphics-s -lsfml-window-s -lsfml-system-s -lopengl32 -lfreetype -lwinmm -lgdi32 -luser32 -lshell32 -ladvapi32 -lws2_32"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Run Flappy Bird",
      "type": "shell",
      "command": "./flappybird.exe",
      "dependsOn": "Build Flappy Bird",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}
